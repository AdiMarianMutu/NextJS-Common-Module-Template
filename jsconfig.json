{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      /* 
        [p] stands for public folder
        [f] stands for frontend folder
        [b] stands for backend folder 
        [s] stands for shared folder
      */

      /* public DIR */
      "@public/*": ["/public/*"],
      "@passets/*": ["/public/assets/*"],
      /* src DIR */
      "@/*": ["*"],
      /* BACKEND */
      "@bend/*": ["/src/backend/*"],
      "@bdb/*": ["/src/backend/db/*"],
      "@bapi/*": ["/src/backend/api/*"],
      /* FRONTEND */
      "@fend/*": ["/src/frontend/*"],
      "@fcommon/*": ["/src/frontend/common/*"],
      "@fmodules/*": ["/src/frontend/modules/*"],
      "@fpage": ["/src/frontend/common/components/page/Page.jsx"],
      "@fthemecss": ["/src/frontend/modules/theme/theme.css"],
      "@fglobalcss": ["/src/frontend/common/styles/global.css"],
      /* CODE SHARED ACROSS BACKEND AND FRONT END */
      "@shared/*": ["/src/shared/*"],
      "@slib/*": ["/src/shared/lib/*"],
      /* WRAPPERS COMPONENTS */
      "@link": ["/src/frontend/common/components/wrappers/link/Link.jsx"],
      "@image": ["/src/frontend/common/components/wrappers/image/Image.jsx"]
    }
  },
  "exclude": ["node_modules"]
}